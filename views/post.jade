extends layout

block content
    .row
        .post-head-area
            .col-md-5.col-md-offset-3
                h3.post-title #{post.title}
            .col-md-3
                div.post-info-btn
                    button.btn.btn-info.btn-sm(role='button') 赞赏
                div.post-info-btn
                    button.btn.btn-success.btn-sm(role='button') 收藏
    .row
        .col-md-5.col-md-offset-3
            .post-body
                p #{post.content}
        .col-md-3.basic-col-md
            include right_area