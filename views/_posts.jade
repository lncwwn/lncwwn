- posts.forEach(function(post, index) {
    .col-md-1.col-md-offset-2
        .post-interactive.pull-right
            .post-assent
                .glyphicon.glyphicon-triangle-top
                div #{post.interactionData.like}
            .post-oppose
                .glyphicon.glyphicon-triangle-bottom
    .col-md-9.basic-col-md
        .col-md-12.basic-col-md
            .panel.panel-default
                .panel-heading
                    a.text-primary(href='post/#{post.id}') #{post.title}
                    ul.list-inline.pull-right
                        li
                            a.text-primary(href='/users/#{post.author.id}') #{post.author.nick}
                            span.text-muted &nbsp;发表于&nbsp;
                            span.text-info #{post.created}
                .panel-body.post-body #{post.content}
- })